<h1>Pages</h1>

<div class="row">
  <div class="col-md-8">
    <%@pages.each do |page| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to page.title, page %>
        </div>
      </div>
    <% end %>
  <div class="col-md-4">
    <%= link_to "New Page", new_page_path, class: 'btn btn-success' %>
  </div>

</div>
