<h1>Pages</h1>

<div class="row">
  <div class="col-md-8">
    <%if current_user == nil || current_user.premium_user != true%>
      <%@pages.each do |page| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <div>
                <%= link_to page.title, page %>
              </div>
            </h4>
              <small>created by <%=User.find(page.user_id).email%></small>
          </div>
        </div>
      <% end %>
    <%elsif current_user.premium_user%>
      <%@pages.each do |page| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <div>
                <%= link_to page.title, page %>
              </div>
            </h4>
              <small>created by <%=User.find(page.user_id).email%></small>
          </div>
        </div>
      <% end %>
    <%end%>
  <div class="col-md-4">
    <%= link_to "New Page", new_page_path, class: 'btn btn-success' %>
  </div>

</div>
